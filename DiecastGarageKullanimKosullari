<script>
  (function(){
    const btnTR = document.getElementById('btn-tr');
    const btnEN = document.getElementById('btn-en');
    const tr = document.getElementById('terms-tr');
    const en = document.getElementById('terms-en');

    function setLang(lang){
      const isTR = lang === 'tr';
      tr.classList.toggle('hidden', !isTR);
      tr.setAttribute('aria-hidden', String(!isTR));
      en.classList.toggle('hidden', isTR);
      en.setAttribute('aria-hidden', String(isTR));
      btnTR.classList.toggle('active', isTR);
      btnTR.setAttribute('aria-selected', String(isTR));
      btnEN.classList.toggle('active', !isTR);
      btnEN.setAttribute('aria-selected', String(!isTR));
      document.documentElement.lang = isTR ? 'tr' : 'en';
      try{ localStorage.setItem('terms_lang', lang); }catch(e){}
    }

    btnTR.addEventListener('click', () => setLang('tr'));
    btnEN.addEventListener('click', () => setLang('en'));

    // restore pref
    let pref = 'tr';
    try{ pref = localStorage.getItem('terms_lang') || 'tr'; }catch(e){}
    setLang(pref);

    // footer year
    document.getElementById('year').textContent = new Date().getFullYear();
  })();
</script>
